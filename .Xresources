URxvtperl-ext-common: clipboard,font-size

URxvt.clipboard.autocopy: true
URxvt.keysym.M-c: perl:clipboard:copy
URxvt.keysym.M-v: perl:clipboard:paste

! Fake transparency
!urxvt*transparent: true
!urxvt*shading: 0 
!urxvt*depth: 32


!! URxvt Appearance
!URxvt.letterSpace: 0
URxvt.lineSpace: 0
URxvt.geometry: 92x24
URxvt.internalBorder: 10
URxvt.cursorBlink: true
URxvt.cursorUnderline: false
URxvt.saveline: 2048
URxvt.scrollBar: false
URxvt.scrollBar_right: false
URxvt.urgentOnBell: true

!! URxvt Fonts
URxvt.allow_bold: true
URxvt.font: xft:RobotoMono Nerd Font:style=Regular:pixelsize=13:antialias=true
URxvt.imFont: xft:RobotoMono Nerd Font:style=Medium:pixelsize=13:antialias=true
URxvt.boldFont: xft:RobotoMono Nerd Font:style=Bold:pixelsize=13:antialias=true
URxvt.italicFont:xft:RobotoMono Nerd Font:style=Italic:pixelsize=13:antialias=true
URxvt.boldItalicFont: xft:RobotoMono Nerd Font:style=Bold Italic:pixelsize=13:antialias=true
URxvt.letterSpace: 3

!! Change font size
URxvt.keysym.C-Up:     font-size:increase
URxvt.keysym.C-Down:   font-size:decrease
URxvt.keysym.C-S-Up:   font-size:incglobal
URxvt.keysym.C-S-Down: font-size:decglobal
URxvt.keysym.C-equal:  font-size:reset
URxvt.keysym.C-slash:  font-size:show 
